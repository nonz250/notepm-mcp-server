{
  "name": "@nonz250/notepm-mcp-server",
  "version": "0.0.2",
  "description": "An unofficial MCP server for NotePM - a knowledge management platform",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "notepm-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "!dist/__tests__"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepublishOnly": "npm run build && npm test && npm run lint"
  },
  "keywords": [
    "mcp",
    "notepm",
    "model-context-protocol",
    "claude",
    "ai",
    "knowledge-management"
  ],
  "author": "nonz250",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nonz250/notepm-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/nonz250/notepm-mcp-server/issues"
  },
  "homepage": "https://github.com/nonz250/notepm-mcp-server#readme",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^22.19.3",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "shx": "^0.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  }
}
